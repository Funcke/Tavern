<h1><%= @organization.name %></h1>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
              <h2 class="card-title">Users</h2>
              <%= render 'users/list', users: @organization.users %>
              <% if admin? %>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#UserModal">
                Add User
                </button>
              <% end %>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Roles</h2>
                <ul class="list-group card-text">
                <% @organization.roles.each do |role| %>
                    <li class="list-group-item"><%= link_to role.name, role %>: <%= role.users.size %></li>
                <% end %>
                </ul>
                <% if admin? %>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#roleModal">
                    Add Role
                    </button>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
              <h2 class="card-title">Tables</h2>
              <%= render 'tables/list', tables: @organization.tables %>
              <% if admin? %>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#TableModal">
                    Add Role
                    </button>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Products</h2>
                <ul class="list-group card-text" style="overflow: scroll">
                    <% @organization.drinks.each do |p|%>
                        <li class="list-group-item"><span class="badge badge-pill badge-danger">Drink</span><strong><%= p.name%></strong> <%= p.price %></li>
                    <% end %>
                    <% @organization.dishes.each do |p| %>
                        <li class="list-group-item"><span class="badge badge-pill badge-warning">Food</span><strong><%= p.name%></strong> <%= p.price %></li>
                    <% end %>
                </ul>
                <% if admin? %>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ProductModal">
                    Add Role
                    </button>
                <% end %>
            </div>
        </div>
    </div>
</div>
<!-- Role Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'roles/form'%>
      </div>
    </div>
  </div>
</div>
<!-- Product Modal -->
<div class="modal fade" id="ProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'products/form', product: Product.new%>
      </div>
    </div>
  </div>
</div>

<!-- User Modal -->
<div class="modal fade" id="UserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'users/form', user: User.new %>
      </div>
    </div>
  </div>
</div>

<!-- TableModal -->
<div class="modal fade" id="TableModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'tables/form', table: Table.new %>
      </div>
    </div>
  </div>
</div>