<h1><%= @organization.name %></h1>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Users</h2>
                <ul class="list-group card-text">
                    <% @organization.users.each do |u| %>
                        <li class="list-group-item"><%= link_to u.username, u %></li>
                    <% end %>
                </ul>
                <% if is_admin? %><%= link_to 'New User', new_user_url, class: "btn btn-primary card-link" %><% end %>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Roles</h2>
                <ul class="list-group card-text">
                <% @organization.roles.each do |role| %>
                    <li class="list-group-item"><%= link_to role.name, role %>: <%= role.users.size %></li>
                <% end %>
                </ul>
                <% if is_admin? %><%= link_to 'Add role', new_role_url, class: "btn btn-primary card-link" %><% end %>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Tables</h2>
                <ul class="list-group card-text">
                    <% @organization.tables.each do |t| %>
                        <li class="list-group-item"><%= t.nummer %> <a href="<%= generate_qr_url(t) + '.svg'%>" download>QR Code</a></li>
                    <% end %>
                </ul>
                <% if is_admin? %><%= link_to 'New Table', new_table_url, class: "btn btn-primary card-link" %><% end %>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body" style="overflow: scroll">
                <h2 class="card-title">Products</h2>
                <ul class="list-group card-text">
                    <% @organization.products.each do |p|%>
                        <li class="list-group-item"><strong><%= p.name%></strong> <%= p.preis %></li>
                    <% end %>
                </ul>
                <% if is_admin? %><%= link_to 'New Product',  '#', class: "btn btn-primary card-link" %><% end %>
            </div>
        </div>
    </div>
</div>