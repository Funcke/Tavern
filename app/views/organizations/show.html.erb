<h1><%= @organization.name %></h1>
<div class="row">
    <div class="col">
        <ul class="list-group">
            <% @organization.users.each do |u| %>
                <li class="list-group-item"><%= link_to u.username, u %></li>
            <% end %>
        </ul>
        <% if is_admin? %><%= link_to 'New User', new_user_url %><% end %>
    </div>
    <div class="col">
        <ul class="list-group">
        <% @organization.roles.each do |role| %>
            <li class="list-group-item"><%= link_to role.name, role %>: <%= role.users.size %></li>
        <% end %>
        </ul>
        <% if is_admin? %><%= link_to 'Add role', new_role_url %><% end %>
    </div>
</div>