<%= form_with(model: organization, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :phone %>
        <%= form.telephone_field :phone, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :mail %>
        <%= form.email_field :mail, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :street %>
        <%= form.text_field :street, class: 'form-control' %>
    </div>
<% end %>